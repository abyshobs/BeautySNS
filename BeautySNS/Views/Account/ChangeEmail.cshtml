@model BeautySNS.Admin.Models.Accounts.ChangeEmailViewModel

@{
    ViewBag.Title = "Change Email";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <br /><br/>
            <img src="@Url.Action("getImg", "Profile", new { id = Model.loggedInAccountID})" class="nav-avatar img-responsive" align="middle" alt="avatar" />
            <span class="avatar-span">
                <b>@Html.DisplayFor(model => model.loggedInAccount.firstName) @Html.DisplayFor(model => model.loggedInAccount.lastName)</b>
            </span>
            <br />
            <span class="avatar-span">
                <a href="@Url.Action("FileUpload", "Profile", new { id = Model.loggedInAccountID })"> Change Profile Photo</a>

 </span>

            <br />
            <br />

            <ul class="nav nav-sidebar">
                <li>
                    <a href="@Url.Action("NewsFeed", "Alert")">
                        <i class="glyphicon glyphicon-stats"></i>
                        <span>News Feed</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ProfileHomePage", "Profile")">
                        <i class="glyphicon glyphicon-user"></i>
                        <span>My Profile</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("AccountDetails", "Account", new {id = Model.loggedInAccount.accountID })">
                        <i class="glyphicon glyphicon-cog"></i>
                        <span>Account Settings</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Friends", "Friend")">
                        <i class="glyphicon glyphicon-user"></i>
                        <span>My Network</span>
                    </a>
                </li>
            </ul>
            <br />
         
            <span class="small-text">
                About Us | Privacy Policy | FAQs | Terms
                <p>&copy; @DateTime.Now.Year - BeautySNS</p>
            </span>
        </div>

        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          @Html.Partial("_Message")
                <p class="page-header">
                @Html.ActionLink("Edit Account |", "EditAccount", new { id = Model.loggedInAccount.accountID })
                @Html.ActionLink("Change Email |", "ChangeEmail")
                @Html.ActionLink("Change Password |", "EditPassword")
                @Html.ActionLink("Delete Account ", "DeleteAccount", new { id = Model.loggedInAccount.accountID }) <br />
            
            <h3>@ViewBag.Title.</h3>
            <div class="row">
                <div class="col-md-8">
                    <section id="loginForm">
                        @using (Html.BeginForm(new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(m => m.email, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <br />
                                    <input type="submit" value="Submit" class="btn btn-default" />
                                    @Html.ActionLink("Back", "AccountDetails", new { id = Model.accountID }, new { @class = "btn btn-default" })
                                </div>
                            </div>

                        }
                    </section>
                </div>

            </div>

          

        </div>
    </div>
</div>


<link href="~/Content/bootstrap.min.css" rel="stylesheet">
<!-- Custom styles for this template -->
<link href="~/Content/Dashboard.css" rel="stylesheet">


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


