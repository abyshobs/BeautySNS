@model BeautySNS.Admin.Models.Profiles.DetailsViewModel

@{
    ViewBag.Title = "UserDetails";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <br />   <br />
            <b>@Html.DisplayFor(model => model.permissionType) User</b><br /><br />
            <b>@Html.DisplayFor(model => model.LoggedInAccount.firstName) @Html.DisplayFor(model => model.LoggedInAccount.lastName)</b>
            <br />
            @Html.DisplayFor(model => model.LoggedInAccount.email)
            <br />


            <br />

            <ul class="nav nav-sidebar">
                <li>
                    <a href="@Url.Action("SiteActivity", "Alert")">
                        <i class="glyphicon glyphicon-stats"></i>
                        <span>News Feed/ Site Activity</span>
                    </a>
                </li>
@if (Model.permissionType == "SuperAdmin") {
                <li>
                    <a href="@Url.Action("AdminActivity", "Alert")">
                        <i class="glyphicon glyphicon-stats"></i>
                        <span>News Feed/ Admin Activity</span>
                    </a>
                </li>
}
                <li>
                    <a href="@Url.Action("MyActivity", "Admin")">
                        <i class="glyphicon glyphicon-cog"></i>
                        <span>My Activity</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("UserAccounts", "Admin")">
                        <i class="glyphicon glyphicon-user"></i>
                        <span>User Accounts</span>
                    </a>
                </li>
@if (Model.permissionType == "SuperAdmin") {
                <li>
                    <a href="@Url.Action("AccountPermissionIndex", "Permission")">
                        <i class="glyphicon glyphicon-user"></i>
                        <span>Admin Users</span>
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("PermissionIndex", "Permission")">
                        <i class="glyphicon glyphicon-stats"></i>
                        <span>Permissions</span>
                    </a>
                </li>
}
                <li>
                    <a href="@Url.Action("Index", "Job")">
                        <i class="glyphicon glyphicon-user"></i>
                        <span>Jobs</span>
                    </a>
                </li>

            </ul>
            <br />
            <br />
            <span class="small-text">
                About Us | Privacy Policy | FAQs | Terms
                <p>&copy; @DateTime.Now.Year - BeautySNS</p>
            </span>
        </div>

        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

            <div>
                <a href="@Url.Action("UserProfileHomepage", "Profile", new { id = Model.accountID})">
                    Back to @Html.DisplayFor(model => model.Account.firstName)'s Profile Page
                </a> | <a href="@Url.Action("DeleteUser", "Admin", new { id = Model.accountID})">
                    Delete @Html.DisplayFor(model => model.Account.firstName)
                </a>
            </div>
            <h2>User Details</h2>
            <div class="content-block data-disp">
                <h2>@Html.DisplayFor(model => model.fullName)</h2>
                @Html.Partial("_Message")
                <div class="sub-wrapper clearfix"></div>
                <div class="content-block data-entry">
                    <div class="sub-wrapper clearfix">
                        <div class="form-horizontal">

                            <fieldset>
                                <legend></legend>

                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.jobID)
                                    </div>
                                    <div class="col-sm-2 form-field">
                                        @Html.DisplayFor(model => model.Job.name)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.avatar)
                                    </div>
                                    <div class="col-sm-2 form-field">
                                        <img src="@Url.Action("getImg", "Profile", new { id = Model.Account.accountID })" height="200" width="200" alt="avatar" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.firstName)
                                    </div>
                                    <div class="col-sm-2 form-field">
                                        @Html.DisplayFor(model => model.Account.firstName)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.lastName)
                                    </div>
                                    <div class="col-sm-2 form-field">
                                        @Html.DisplayFor(model => model.Account.lastName)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.birthDate)
                                    </div>
                                    <div class="col-sm-2 form-field">
                                        @Html.DisplayFor(model => model.Account.birthDate)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.email)
                                    </div>
                                    <div class="col-sm-2 form-field">
                                        @Html.DisplayFor(model => model.Account.email)
                                        @*<br /> @Html.ActionLink("Change Email", "ChangeEmail")*@
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.aboutMe)
                                    </div>
                                    <div class="col-md-2 form-field">
                                        @Html.DisplayFor(model => model.aboutMe)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.education)
                                    </div>
                                    <div class="col-sm-2 form-field">
                                        @Html.DisplayFor(model => model.education)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.experience)
                                    </div>
                                    <div class="col-sm-2 form-field">
                                        @Html.DisplayFor(model => model.experience)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.location)
                                    </div>
                                    <div class="col-sm-2 form-field">
                                        @Html.DisplayFor(model => model.location)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.website)
                                    </div>
                                    <div class="col-sm-2 form-field">
                                        @Html.DisplayFor(model => model.website)
                                    </div>
                                </div>



                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.createDate)
                                    </div>
                                    <div class="col-sm-2 form-field">
                                        @Html.DisplayFor(model => model.lastUpdateDate)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-2 form-label">
                                        @Html.DisplayNameFor(model => model.lastUpdateDate)
                                    </div>
                                    <div class="col-sm-2 form-field">
                                        @Html.DisplayFor(model => model.lastUpdateDate)
                                    </div>
                                </div>

                            </fieldset>

                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>
</div>


<link href="~/Content/bootstrap.min.css" rel="stylesheet">
<!-- Custom styles for this template -->
<link href="~/Content/Dashboard.css" rel="stylesheet">






























